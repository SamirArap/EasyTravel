<% @page_title = 'Category' %>

<div class="container">
	<div class="jumbotron">
		<h2>Category</h2>

		<div class="row">
			<div class="col-md-6"><%= link_to "Add new", {:action => 'new'}, :class => "btn btn-default btn-block" %></div>
			<div class="col-md-6"><%= link_to "Beck", {:controller => 'subjects', :action => 'index'}, :class => "btn btn-default btn-block" %></div>
		</div>
		<br>
		<div class="row">
			<div class="col-md-2">Category</div>
		</div>
		<% @categories.each do |category|%>
			<hr> 
			<div class="row">
				<div class="col-md-2"><%= category.name%></div>
				<div class="col-md-8"></div>
				<div class="col-md-2">
					<%= link_to "Edit", {:action => 'edit', :id => category.id}, :class => "btn btn-default btn-block" %>
					<%= link_to "Delete", {:action => 'delete', :id => category.id}, :class => "btn btn-default btn-block" %>
				</div>
			</div>
		<%end%>


	</div>
</div>