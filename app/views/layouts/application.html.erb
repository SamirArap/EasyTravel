	<script>
		$(function() {
			$('#mega-menu-tut').dcMegaMenu({
					rowItems: '3',
					speed: 'fast'
			});			
		});	
	</script>
</head>

<body>
	<%= render(:partial => 'public/header') %>

	<div class="container">
		<p class="notice"><%= notice %></p>
