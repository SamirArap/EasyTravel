<% @page_title = "New destination" %>

<div class="container">
	<div class="jumbotron">
		<h2>New destination</h2>
		
		<%= form_for(:section, :url => {:action => 'create', :page_id => @page.id}) do |f| %>
	
			<%= render(:partial => 'form', :locals => {:f => f}) %>
			

			<div class="row">
				<div class="col-md-4"><%= submit_tag("Add new destination", :class => "btn btn-default btn-block")%></div>
				<div class="col-md-4"><%= link_to("Add new category",{:controller => 'category', :action => 'index'}, :class => "btn btn-default btn-block")%></div>
				<div class="col-md-4"><%= link_to("Back", {:action => 'index', :page_id => @page.id}, :class => "btn btn-default btn-block")%></div>
			</div>
		<%end%>
	</div>
</div>