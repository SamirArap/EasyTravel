<% @page_title = "New destination" %>

<div class="container">
	<div class="jumbotron">
		<h2>New section</h2>
		
		<%= form_for(:section, :url => {:action => 'create', :page_id => @page.id}) do |f| %>
	
			<%= render(:partial => 'form', :locals => {:f => f}) %>

			<div class="row">
				<div class="col-md-6"><%= submit_tag("Add new destination", :class => "btn btn-default btn-block")%></div>
				<div class="col-md-6"><%= link_to("Back", {:action => 'index'}, :class => "btn btn-default btn-block")%></div>
			</div>
		<%end%>
	</div>
</div>