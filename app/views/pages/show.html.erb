<% @page_title = 'Show Pages'%>

<div class="container">
	<div class="jumbotron">
		<h2>Destination</h2>

		<div class="row">
			<div class="col-md-4"><%= image_tag(@page.permalink, :class => "img-circle", size: "480x320") %></div>
			<div class="col-md-4"></div>
			<div class="col-md-4">
				<h2><%= @page.name %></h2>
				<p>Position: <%= @page.position %></p>
				<p>Visible: <%= status_tag(@page.visible) %></p>
			</div>
		</div>
		<br>
		<div class="row">
			<div class="col-md-4"><%= link_to "Edit", {:action => 'edit', :id => @page.id}, :class => "btn btn-default btn-block"%></div>
			<div class="col-md-4"><%= link_to "Delete", {:action => 'delete', :id => @page.id}, :class => "btn btn-default btn-block"%></div>
			<div class="col-md-4"><%= link_to "Back", {:action => 'index', :id => @page.id}, :class => "btn btn-default btn-block"%></div>
		</div>
	</div>
</div>