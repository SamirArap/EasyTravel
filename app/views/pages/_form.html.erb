
<div class="row">
	<div class="col-md-2"><%= f.label :name %> </div>
	<div class="col-md-10"><%= f.text_field :name, :class => 'form-control', :placeholder => 'Enter country' %> </div>
</div>
<div class="row">
	<div class="col-md-2"><%= f.label :permalink, "Picture" %> </div>
	<div class="col-md-10"><%= f.text_field :permalink, :class => 'form-control', :placeholder => 'Enter link http://picture.jpg or png or gif' %> </div>
</div>
<div class="row">
	<div class="col-md-2"><%= f.label :position %> </div>
	<div class="col-md-10"><%= f.select :position, 1..@page_count %> </div>
</div>
<div class="row">
	<div class="col-md-2"><%= f.label :visible %> </div>
	<div class="col-md-10"><%= f.check_box :visible %> </div>
</div>