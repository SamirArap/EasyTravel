<% @page_title = 'New Pages'%>

<div class="container">
	<div class="jumbotron">
		
		<h2>Add new page</h2>

		<%= form_for(:page, :url => {:action => 'create'}) do |f| %>
	
			<%= render(:partial => 'form', :locals => {:f => f})%>

			<div class="row">
				<div class="col-md-6"><%= submit_tag("Add new page", :class => "btn btn-default btn-block") %></div>
				<div class="col-md-6"><%= link_to("Back", {:action => 'index'}, :class => "btn btn-default btn-block") %></div>
			</div>
		<%end%>
	</div>
</div>